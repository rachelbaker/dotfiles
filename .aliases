alias zshconfig="subl ~/.zshrc"
alias ohmyzsh="subl ~/.oh-my-zsh"

# Reload ZSH Configuration
alias reload!='. ~/.zshrc'

# Sublime alias
alias subl="'/Applications/Sublime Text 2.app/Contents/SharedSupport/bin/subl'"
alias e="'/Applications/Sublime Text 2.app/Contents/SharedSupport/bin/subl' -n ."

# WP CLI alias
alias wp='$DOTFILES/wp-cli/bin/wp'

# Todo.txt aliases
alias todo="~/.todo-cli/todo.sh"
alias t="todo.sh -d ~/.todo-cli/todo.cfg"

# PHP alias
# alias php="/Applications/MAMP/bin/php/php5.4.4/bin/php"
alias php="/usr/local/Cellar/php54/5.4.12/bin/php"

# MySQL alias
alias mysql="/usr/local/Cellar/mysql/5.6.10/bin/mysql"

# Edit Hosts File
alias hosts='sudo $EDITOR /etc/hosts'

# Recursively delete `.DS_Store` files
alias cleanup="find . -name '*.DS_Store' -type f -ls -delete"

# Flush DNS cache
alias flush="dscacheutil -flushcache"

# File size
alias fs="stat -f \"%z bytes\""

# Ruby Shortcuts
alias sgi='sudo gem install'

# Set OSX Defaults
alias set-defaults="exec $DOTFILES/osx/set-defaults.sh"

# Directory Navigation
alias ..='cd ..'            # Go up one directory
alias ...='cd ../..'        # Go up two directories
alias ....='cd ../../..'    # And for good measure

# Listing Files
alias lsd='ls -l | grep "^d"'  # List only directories
alias ls='ls -lG'              # Always use color output for `ls`

# Helpers
alias grep='grep --color=auto' # Always highlight grep search term
alias ping='ping -c 5'      # Pings with 5 packets, not unlimited


# Mac Helpers
alias showhidden="defaults write com.apple.Finder AppleShowAllFiles YES && killall Finder"
alias hidehidden="defaults write com.apple.Finder AppleShowAllFiles NO && killall Finder"

# Hide/show all desktop icons (useful when presenting)
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"